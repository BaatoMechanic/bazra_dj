apiVersion: apps/v1
kind: Deployment
metadata:
  name: bazra-deployment
  labels:
    app: bazra-app
spec:
  replicas: 3
  selector:
    matchLabels:
      app: bazra-deployment
  template:
    metadata:
      labels:
        app: bazra-deployment
    spec:
      containers:
      - name: bazra-app
        image: registry.digitalocean.com/bazra/bazra-app:latest
        imagePullPolicy: Always
        envFrom:
        - secretRef:
            name: bazra-k8s-prod-env
        env:
        - name: GOOGLE_APPLICATION_CREDENTIALS
          value: /app/secrets/firebase-credentials.json
        ports:
        - containerPort: 8000
        command: ["gunicorn", "-b", "0.0.0.0:8000", "bazra_dj.wsgi"]
        volumeMounts:
        - name: firebase-credentials-volume
          mountPath: /app/secrets/firebase-credentials.json
          subPath: firebase-credentials.json
        - name: static-files
          mountPath: /app/static

      - name: bazra-app-daphne
        image: registry.digitalocean.com/bazra/bazra-app:latest
        imagePullPolicy: Always
        envFrom:
        - secretRef:
            name: bazra-k8s-prod-env
        env:
        - name: GOOGLE_APPLICATION_CREDENTIALS
          value: /app/secrets/firebase-credentials.json
        ports:
        - containerPort: 8001
        command: ["daphne", "-b", "0.0.0.0", "-p", "8001", "bazra_dj.asgi:application"]
        volumeMounts:
        - name: firebase-credentials-volume
          mountPath: /app/secrets/firebase-credentials.json
          subPath: firebase-credentials.json
        - name: static-files
          mountPath: /app/static

      - name: nginx
        image: nginx:alpine
        ports:
        - containerPort: 80
        volumeMounts:
        - name: static-files
          mountPath: /usr/share/nginx/html/static
        - name: nginx-config
          mountPath: /etc/nginx/conf.d

      volumes:
      - name: firebase-credentials-volume
        secret:
          secretName: firebase-credentials
      - name: static-files
        emptyDir: {}
      - name: nginx-config
        configMap:
          name: nginx-config

      imagePullSecrets:
      - name: bazra
---
apiVersion: v1
kind: Service
metadata:
  name: bazra-service
spec:
  type: LoadBalancer
  ports:
  - name: http
    protocol: TCP
    port: 80
    targetPort: 80
  selector:
    app: bazra-deployment
